<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
    namespace="com.snut.cse.exchangers.board.mapper.BoardMapper">

    <select id="selectAll" resultType="BoardVO">
        <![CDATA[
            SELECT
                *
            FROM tbl_board
            where board_no > 0;
        ]]>

    </select>

    <select id="select" resultType="BoardVO">
        SELECT
            *
        FROM tbl_board
        WHERE board_no = #{board_no};
    </select>

    <insert id="insert">
        INSERT INTO tbl_board(title, content, writer)
        VALUES (#{title}, #{content}, #{writer})
    </insert>

    <insert id="insertSelectKey" useGeneratedKeys="true" keyProperty="board_no">
        INSERT INTO tbl_board(board_no, title, content, writer)
        VALUES (#{board_no}, #{title}, #{content}, #{writer})
    </insert>

    <update id="update">
        UPDATE tbl_board
        SET title = #{title}, content = #{content}, writer=#{writer}, updatedate=current_time
        WHERE board_no = #{board_no}
    </update>

    <delete id="delete">
        DELETE
        FROM tbl_board
        WHERE board_no = #{board_no}
    </delete>

</mapper>